package com.adotaPet.api.domain.enums;

public enum Porte {
	MASTER(1, "ROLE_MASTER"),
	ADMIN(2, "ROLE_ADMN"),
	VOLUNTARIO(3, "ROLE_VOLUNTARIO"),
	USUARIO(4, "ROLE_USUARIO");
	
	private int cod;
	private String descricao;
	
	private Porte(int cod, String descricao) {
		this.cod = cod;
		this.descricao = descricao;
	}

	public int getCod() {
		return cod;
	}
	public String getDescricao() {
		return descricao;
	}
	
	public static Porte toEnum(Integer cod) {
		
		if (cod == null) {
			return null;
		}
		for(Porte x : Porte.values()) {
			if(cod.equals(x.getCod())) {
				return x;
			}		
		}
		throw new IllegalArgumentException("Id inv√°lido " + cod);
	}
}
